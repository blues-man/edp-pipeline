//        }
//      }
//    }
//    stage('Promote to DEV') {
//      steps {
//        script {
//          openshift.withCluster() {
//            openshift.tag("crtstservici:latest", "crtstservici:dev")
//          }
//        }
//      }
//    }
//    stage('Create DEV') {
//      when {
//        expression {
//          openshift.withCluster() {
//            return !openshift.selector('dc', 'crtstservici-dev').exists()
//          }
//        }
//      }
//      steps {
//        script {
