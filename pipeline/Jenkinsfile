pipeline {
  agent {
      label 'maven'
  }
  stages {
    stage('Build App') {
      steps {
        sh "mvn package -Pfis-karaf"
      }
    }
    stage('Create Image Builder') {
      when {
        expression {
          openshift.withCluster() {
            return !openshift.selector("bc", "crtstservici").exists();
          }
        }
      }
      steps {
        script {
          openshift.withCluster() {
            openshift.newBuild("--name=crtstservici", "--image-stream=openshift/fis-karaf-openshift:2.0", "--binary")
          }
        }
      }
    }
//    stage('Build Image') {
